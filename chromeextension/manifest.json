{
  "manifest_version": 3,
  "name": "AI Email Reply Generator",
  "version": "1.0",
  "description": "Generate AI replies for Gmail",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
